<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile"
    android:fillViewport="true"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"

    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="15dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_profile"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:riv_corner_radius="1500dp"
            android:layout_height="250dp"
            android:layout_width="250dp"
            android:scaleType="fitCenter"
            android:src="@drawable/blank_profile"
            />

        <ImageView
            android:id="@+id/btn_add_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/pencil"
            />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/lightGrey"
        android:paddingBottom="10dp">


    <EditText
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:background="#55FFFFFF"
        android:textSize="18sp"
        android:text="Jason Bourne, 23"
        android:hint="Name, Age"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:lines="1"
        android:maxLines="1"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:background="#55FFFFFF"
        android:textSize="18sp"
        android:padding="10dp"
        android:text="Just a regular fun guy!"
        android:hint="Say something about yourself"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:lines="3"
        android:maxLines="10"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Places you're interested in"/>


    <ListView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/list_interested"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        ></ListView>
    </LinearLayout>
</LinearLayout>
</ScrollView>